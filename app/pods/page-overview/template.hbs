{{#bp-layout direction="col" local-class="page-overview" 
	classNames="p-4"}}
	{{#bp-tabs selection=overviewTab as |tabs|}}
		{{#tabs.tablist as |list|}}
			<li class="nav-item">
				{{#list.tab
				selectPaneId='missions' 
				onSelect=(action (mut overviewTab))}}我的任务{{/list.tab}}
			</li>
			<li class="nav-item">
				{{#list.tab
				selectPaneId='reports' 
				onSelect=(action (mut overviewTab))}}我的报告
				{{/list.tab}}
			</li>
		{{/tabs.tablist}}
		<div class="tab-content">
			{{#tabs.pane elementId="missions"}}
				<h4 class="text-center m-3">我的任务</h4>
				<table class="table">
					<thead class="table-light">
						<th>name</th>
						<th>proposalId</th>
						<th>Go</th>
					</thead>
					<tbody>
						{{#each model.useableProposals as |item|}}
							{{#if item.proposal}}
								<tr>
									<td>{{item.proposal.name}}</td>
									<td>{{item.proposal.id}}</td>
									<td>
										{{#link-to 'page-scenario' item.proposal.id}}
											Go
										{{/link-to}}
									</td>
								</tr>
							{{/if}}
						{{/each}}
					</tbody>
				</table>
			{{/tabs.pane}}
			{{#tabs.pane elementId="reports"}}
				<h4 class="text-center m-3">我的报告</h4>
			{{/tabs.pane}}
		</div>
	{{/bp-tabs}}
{{/bp-layout}}