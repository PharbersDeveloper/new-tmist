{{#bp-layout local-class="historical-sales-container"}}
	{{#bp-layout tagName="ul" direction="col" local-class="nav" 
				classNames="mr-4 p-4 bg-white"}}
		{{#bp-layout tagName="li" cross="center" 
					local-class=(if (bp-eq salesGroupValue 0) "active")
					classNames="px-4"}}
			<span {{action 'changeSalesValue' 0}}>产品销售报告</span>
		{{/bp-layout}}
		{{#bp-layout tagName="li" cross="center" 
					local-class=(if (bp-eq salesGroupValue 1) "active")
					classNames="px-4"}}
			<span {{action 'changeSalesValue' 1}}>代表销售报告</span>
		{{/bp-layout}}
		{{#bp-layout tagName="li" cross="center" 
					local-class=(if (bp-eq salesGroupValue 2) "active")
					classNames="px-4"}}
			<span {{action 'changeSalesValue' 2}}>医院销售报告</span>
		{{/bp-layout}}
	{{/bp-layout}}
	{{#bp-layout local-class="content"}}
		{{#if (bp-eq salesGroupValue 0)}}
			<div local-class="report product">
				{{#bp-layout tagName="h2" cross="center" local-class="title"
				 classNames="m-0 bg-white px-4"}}
					产品销售报告
				{{/bp-layout}}
				{{#bp-layout direction="col"}}
					{{#bp-layout main="between" local-class="choose-container"
						classNames="mb-4 bg-white"}}
						{{#bp-layout main="between" cross="center"
							local-class="choose-area" 
							classNames="px-4"}}
							<span local-class="keys" class="mr-4">选择药品</span>
							{{#bp-dropdown widthSize="auto"
								local-class="dd-medicines dd-area" as |dd|}}
								{{#dd.button}}
									{{#if tmpGc.id}}
										<p>{{tmpGc.productConfig.product.name}}</p>
									{{else}}
										请选择
									{{/if}}
									{{bp-icon icon='down'}}
								{{/dd.button}}
								{{#dd.menu as |menu|}}
									{{#each model.goodsConfigs as |gc|}}
										{{#menu.option value=gc
												onClick=(action (mut tmpGc))}}
											{{gc.productConfig.product.name}}
										{{/menu.option}}
									{{/each}}
								{{/dd.menu}}
							{{/bp-dropdown}}
						{{/bp-layout}}
						<div local-class="choose-area" class="px-4"></div>
					{{/bp-layout}}
					<table local-class="table-container" class="table">
						<thead>
							<th>药品名称 </th>
							{{#each prodSalesReports as |report|}}
								<th>{{report.season}}</th>
							{{/each}}
						</thead>
						<tbody class="bg-white">
							{{!-- 应该遍历多药品，显示上方下拉菜单中展示的药品 --}}
							<tr>
								<td>口服抗生素</td>
								{{#each prodSalesReports as |report|}}
									<td>￥{{report.value}}</td>
								{{/each}}
							</tr>
						</tbody>
					</table>
				{{/bp-layout}}
			</div>
		{{else if (bp-eq salesGroupValue 1)}}
			representative
		{{else}}
			hospital
		{{/if}}
	{{/bp-layout}}
{{/bp-layout}}