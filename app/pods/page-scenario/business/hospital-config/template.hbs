{{#bp-layout tagName="h5" cross="center" local-class=(if tmpRc.id 'title' 'title disabled')
	classNames="m-0 px-4 bg-white"}}
	药品相关资源设定
{{/bp-layout}}
<table local-class={{if tmpRc.id 'prod' 'prod disabled'}} class="table mb-2">
	<thead class='bg-white'>
		<tr>
			<th class="border-0 pb-2 pl-4 pr-2 text-left">产品名称</th>
			<th class="border-0 pb-2 px-2 text-right">药品潜力</th>
			<th class="border-0 pb-2 px-2 text-right">上季度销售额</th>
			<th class="border-0 pb-2 px-2 text-right">指标分配</th>
			<th class="border-0 pb-2 pl-2 pr-4 text-right ">预算分配</th>
		</tr>
	</thead>
	<tbody class="bg-white">
		{{!-- {{#each model.salesConfigs as |sc|}} --}}
		{{#each model.salesReport.hospitalSalesReports as |hSR|}}
			{{!-- {{#if (bp-eq sc.destConfig.hospitalConfig.hospital.id model.destConfig.hospitalConfig.hospital.id)}} --}}
			{{#if (bp-eq hSR.destConfig.hospitalConfig.hospital.id model.destConfig.hospitalConfig.hospital.id)}}
				<tr class="mx-0 px-4">
					<td class="pl-4 pr-2 border-0 text-left">
						{{!-- {{sc.goodsConfig.productConfig.product.name}} --}}
						{{model.salesReport.productSalesReports.firstObject.goodsConfig.productConfig.product.name}}
					</td>
					{{!-- <td class="px-2 border-0 text-right">
						{{#each sc.salesReport.hospitalSalesReports as |hsr|}}
							{{#if (bp-eq hsr.destConfig.hospitalConfig.hospital.id model.destConfig.hospitalConfig.hospital.id)}}
								￥{{format-number hsr.potential}}
							{{/if}}
						{{/each}}
					</td> --}}
					<td class="px-2 border-0 text-right">
						{{!-- {{#each model.salesReport.hospitalSalesReports as |hsr|}}
							{{#if (bp-eq hsr.destConfig.hospitalConfig.hospital.id model.destConfig.hospitalConfig.hospital.id)}}
								￥{{format-number hsr.potential}}
							{{/if}}
						{{/each}} --}}
						￥{{format-number hSR.potential}}
					</td>
					{{!-- <td class="px-2 border-0 text-right">
						{{#each sc.salesReport.hospitalSalesReports as |hsr|}}
							{{#if (bp-eq hsr.destConfig.hospitalConfig.hospital.id model.destConfig.hospitalConfig.hospital.id)}}
								￥{{format-number hsr.sales 0}}
							{{/if}}
						{{/each}}
					</td> --}}
					<td class="px-2 border-0 text-right">
						{{!-- {{#each model.salesReport.hospitalSalesReports as |hsr|}}
							{{#if (bp-eq hsr.destConfig.hospitalConfig.hospital.id model.destConfig.hospitalConfig.hospital.id)}}
								￥{{format-number hsr.sales 0}}
							{{/if}}
						{{/each}} --}}
						￥{{format-number hSR.sales 0}}
					</td>
					<td class="px-2 border-0">
						{{bp-input block=true widthSize="auto" 
							value=model.businessinput.salesTarget
							disabled=(not tmpRc.id)
							local-class="input-prepend input-money"
							classNames="mb-2"}}
						<p class="mt-2 mb-0 text-center" local-class="percent">
							{{IndicatorAllocationPercent.percent}}%
						</p>
					</td>
					<td class="pl-2 pr-4 border-0">
						{{bp-input block=true widthSize="auto"
							value=model.businessinput.budget
							disabled=(not tmpRc.id)
							local-class="input-prepend input-money"}}
						<p class="mt-2 mb-0 text-center" local-class="percent">
							{{budgetPercent.percent}}%
						</p>
					</td>
				</tr>
			{{/if}}
		{{/each}}
	</tbody>
</table>
