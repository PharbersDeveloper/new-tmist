{{#bp-layout direction="col" local-class="review-container" }}
	{{#bp-layout main="center" classNames="py-4" local-class="review-tabs" }}
		{{#bp-button-group value=groupValue type="radio" 
			onChange=(action (mut groupValue)) as |bg|}}
			{{#bg.button type="default" value=0}}业务决策情况{{/bg.button}}
			{{#bg.button type="default" value=1}}管理决策情况{{/bg.button}}
		{{/bp-button-group}}
	{{/bp-layout}}
	{{#bp-layout main="between" local-class="review-content" }}
		{{#if (bp-eq groupValue 0)}}
			<div local-class="situation business">
				{{#bp-layout direction="col" classNames="bg-white"}}
					{{#bp-layout main="between" local-class="choose-container"
						classNames='px-4 '}}
						{{#bp-layout cross='center' local-class="choose-area title" }}
							业务员决策回顾
						{{/bp-layout}}
						{{#bp-layout main="between" cross="center" 
							local-class="choose-area"  classNames="px-4"}}
							<span local-class="keys" class="mr-4">代表</span>
							{{#bp-dropdown widthSize="auto" 
								local-class="dd-sort dd-area" as |dd|}}
								{{#dd.button}}
									{{#if tmpRepName}}
										<p>{{tmpRepName}}</p>
									{{else}}
										请选择
									{{/if}}
									{{bp-icon icon='down'}}
								{{/dd.button}}
								{{#dd.menu as |menu|}}
									{{#menu.option value=''
										onClick=(action (mut tmpRepName))}}
										全部代表
									{{/menu.option}}
									{{#each model.representativeinputs as |ri|}}
										{{#menu.option value=ri.resourceConfig.representativeConfig.representative.name
												onClick=(action (mut tmpRepName))}}
											{{ri.resourceConfig.representativeConfig.representative.name}}
										{{/menu.option}}
									{{/each}}
								{{/dd.menu}}
							{{/bp-dropdown}}
						{{/bp-layout}}
					{{/bp-layout}}
					{{!-- <table local-class="table-container" class="table">
						<thead>
							<th>医院名称</th>
							<th>潜力</th>
							<th>上期销售额</th>
							<th>代表</th>
							<th>分配时间</th>
							<th>销售目标设定</th>
							<th>预算费用</th>
							<th>会议名额</th>
						</thead>
						<tbody class="bg-white">
							{{#each model.businessinputs as |bi|}}
								{{#each model.salesConfigs as |salesConfig|}}
									{{#if (bp-eq bi.destConfig.hospitalConfig.hospital.id salesConfig.destConfig.hospitalConfig.hospital.id)}}
										<tr>
											<td>{{bi.destConfig.hospitalConfig.hospital.name}}</td>
											<td>
												{{#each salesConfig.salesReport.hospitalSalesReports as |hsr|}}
													{{#if (bp-eq hsr.destConfig.hospitalConfig.hospital.id bi.destConfig.hospitalConfig.hospital.id)}}
														￥{{format-number hsr.potential 0}}
													{{/if}}
												{{/each}}
											</td>
											<td>
												{{#each salesConfig.salesReport.hospitalSalesReports as |hsr|}}
													{{#if (bp-eq hsr.destConfig.hospitalConfig.hospital.id bi.destConfig.hospitalConfig.hospital.id)}}
														￥{{format-number hsr.sales 0}}
													{{/if}}
												{{/each}}
											</td>
											<td>
												{{#unless bi.resourceConfig.representativeConfig.representative.name}}
													-
												{{else}}
													{{bi.resourceConfig.representativeConfig.representative.name}}
												{{/unless}}
											</td>
											<td>
												{{#unless bi.visitTime}}
													-
												{{else}}
													{{bi.visitTime}}
												{{/unless}}
											</td>
											<td>
												{{#unless bi.salesTarget}}
													-
												{{else}}
													{{bi.salesTarget}}
												{{/unless}}
											</td>
											<td>
												{{#unless bi.budget}}
													-
												{{else}}
													{{bi.budget}}
												{{/unless}}
											</td>
											<td>
												{{#unless bi.meetingPlaces}}
													-
												{{else}}
													{{bi.meetingPlaces}}
												{{/unless}}
											</td>
										</tr>
									{{/if}}
								{{/each}}
							{{/each}}
						</tbody>
					</table> --}}
					{{business-review model=filterTableData}}
				{{/bp-layout}}
			</div>
		{{else}}
			<div local-class="situation manager">
				<div local-class="time">
					{{#bp-layout tagName="h2" cross="center" 
						local-class="title" classNames="bg-white px-4 mb-2"}}
						经理时间分配
					{{/bp-layout}}
					{{#bp-layout local-class="times" classNames="mb-2"}}
						{{#bp-layout direction="col" classNames="mr-2 bg-white"}}
							{{#bp-layout tagName="h3" cross="center" 
						local-class="title" classNames="px-4"}}
								业务投入时间
							{{/bp-layout}}
							{{#bp-layout }}
								{{#bp-layout direction="col" classNames="p-4 mr-5"}}
									<p class="mb-4" local-class="keys">业务数据策略分析</p>
									<p class="mb-4" local-class="keys">行政工作</p>
									<p class="mb-4" local-class="keys">重点目标客户管理</p>
									<p local-class="keys">代表及KPI</p>
								{{/bp-layout}}
								{{#bp-layout direction="col" classNames="p-4"}}
									{{!-- <p class="mb-4" local-class="values">20%</p>
									<p class="mb-4" local-class="values">10%</p>
									<p class="mb-4" local-class="values">30%</p>
									<p local-class="values">55%</p> --}}
									<p class="mb-4" local-class="values">
										{{#if model.managerinput.strategyAnalysisTime}}
											{{model.managerinput.strategyAnalysisTime}}%
										{{else}}
											-
										{{/if}}
									</p>
									<p class="mb-4" local-class="values">
										{{#if model.managerinput.adminWorkTime}}
											{{model.managerinput.adminWorkTime}}%
										{{else}}
											-
										{{/if}}
									</p>
									<p class="mb-4" local-class="values">
										{{#if model.managerinput.clientManagementTime}}
											{{model.managerinput.clientManagementTime}}%
										{{else}}
											-
										{{/if}}
									</p>
									<p local-class="values">
										{{#if model.managerinput.kpiAnalysisTime}}
											{{model.managerinput.kpiAnalysisTime}}%
										{{else}}
											-
										{{/if}}
									</p>
								{{/bp-layout}}
							{{/bp-layout}}
						{{/bp-layout}}
						{{#bp-layout direction="col" classNames="bg-white"}}
							{{#bp-layout tagName="h3" cross="center" 
						local-class="title" classNames="px-4"}}
								团队时间投入
							{{/bp-layout}}
							{{#bp-layout }}
								{{#bp-layout direction="col" classNames="p-4 mr-5"}}
									<p class="mb-4" local-class="keys">团队例会</p>
								{{/bp-layout}}
								{{#bp-layout direction="col" classNames="p-4"}}
									<p class="mb-4" local-class="values">
										{{#if model.managerinput.teamMeetingTime}}
											{{model.managerinput.teamMeetingTime}}%
										{{else}}
											-
										{{/if}}
									</p>
								{{/bp-layout}}
							{{/bp-layout}}
						{{/bp-layout}}
					{{/bp-layout}}
					{{#bp-layout tagName="h2" cross="center" 
						local-class="title" classNames="mb-0 px-4 bg-white"}}
						管理代表时间投入
					{{/bp-layout}}
					<div local-class="table-container" class="mb-2 p-4 bg-white">
						<table class="table">
							<thead>
								<th class="border-0 pt-0">代表名称</th>
								<th class="border-0 pt-0">1v1能力辅导</th>
								<th class="border-0 pt-0">协访时间 </th>
							</thead>
							<tbody>
								{{#each model.representativeinputs as |rep|}}
									<tr>
										<td>
											{{rep.resourceConfig.representativeConfig.representative.name}}
										</td>
										<td>
											{{#if rep.abilityCoach}}
												{{rep.abilityCoach}}%
											{{else}}
												-
											{{/if}}
										</td>
										<td>
											{{#if rep.assistAccessTime}}
												{{rep.assistAccessTime}}%
											{{else}}
												-
											{{/if}}
										</td>
									</tr>
								{{else}}
									暂无填写数据
								{{/each}}
							</tbody>
						</table>
					</div>
				</div>
				<div local-class="point">
					{{#bp-layout tagName="h2" cross="center"
						local-class="title" classNames="mb-0 px-4 bg-white"}}
						行动点数分配
					{{/bp-layout}}
					<div local-class="table-container" class="p-4 bg-white">
						<table class="table">
							<thead>
								<th class="border-0">代表姓名</th>
								<th class="border-0">产品知识培训</th>
								<th class="border-0">销售能力培训</th>
								<th class="border-0">区域管理培训</th>
								<th class="border-0">绩效约谈</th>
								<th class="border-0">职业发展指导</th>
								{{!-- <th class="border-0">总点数</th> --}}
							</thead>
							<tbody>
								{{#each model.representativeinputs as |rep|}}
									<tr>
										<td>
											{{rep.resourceConfig.representativeConfig.representative.name}}
										</td>
										<td>
											{{#if rep.productKnowledgeTraining}}
												{{bp-icon icon='check'}}
											{{/if}}
										</td>
										<td>
											{{#if rep.salesAbilityTraining}}
												{{bp-icon icon='check'}}
											{{/if}}
										</td>
										<td>
											{{#if rep.regionTraining}}
												{{bp-icon icon='check'}}
											{{/if}}
										</td>
										<td>
											{{#if rep.performanceTraining}}
												{{bp-icon icon='check'}}
											{{/if}}
										</td>
										<td>
											{{#if rep.vocationalDevelopment}}
												{{bp-icon icon='check'}}
											{{/if}}
										</td>
										{{!-- <td>{{rep.totalPoint}}</td> --}}
									</tr>
								{{else}}
									暂无填写数据
								{{/each}}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		{{/if}}
	{{/bp-layout}}
{{/bp-layout}}