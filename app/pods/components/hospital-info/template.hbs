{{#bp-layout tagName="h3" cross="center" local-class="title" class="px-4" }}
	<span class="mr-2" local-class="icon" {{action 'showContent'}}>
		{{bp-icon icon=icon}}
	</span>
	{{dests.hospitalConfig.hospital.name}}
{{/bp-layout}}
{{#if showContent}}
	{{#bp-layout class="p-4" local-class="content" }}
		<div local-class="infos">
			{{#bp-layout local-class="basic" main="between" }}
				{{#each dests.hospitalConfig.hospital.images as |img index|}}
					{{#if (bp-eq index 0)}}
						<img src={{img.img}} alt={{dests.hospitalConfig.hospital.name}} class="mr-4">
					{{/if}}
				{{/each}}
				<div local-class="properties">
					{{#bp-layout tagName="p" }}
						<span class="mr-3">成立时间</span>
						<span>
							{{dests.hospitalConfig.hospital.regtime}}
						</span>
					{{/bp-layout}}
					{{#bp-layout tagName="p" }}
						<span class="mr-3">医院等级</span>
						<span>
							{{dests.hospitalConfig.hospital.hospitalLevel}}
						</span>
					{{/bp-layout}}
					{{#bp-layout tagName="p" }}
						<span class="mr-3">医院类型</span>
						<span>
							{{dests.hospitalConfig.hospital.hospitalCategory}}
						</span>
					{{/bp-layout}}
					{{#bp-layout tagName="p" }}
						<span class="mr-3">空间所属</span>
						<span>{{dests.hospitalConfig.spaceBelongs}}</span>
					{{/bp-layout}}
				</div>
				<div local-class="properties">
					{{#bp-layout tagName="p" }}
						<span class="mr-3">医生数量</span>
						<span>{{dests.hospitalConfig.doctorNumber}}</span>
					{{/bp-layout}}
					{{#bp-layout tagName="p" }}
						<span class="mr-3">病床数量</span>
						<span>{{dests.hospitalConfig.bedNumber}}</span>
					{{/bp-layout}}
					{{#bp-layout tagName="p" }}
						<span class="mr-3">医药收入</span>
						<span>{{dests.hospitalConfig.income}}</span>
					{{/bp-layout}}
					{{#bp-layout tagName="p" }}
						<span class="mr-3">患者支付力</span>
						<span>
							{{dests.hospitalConfig.abilityToPay}}
						</span>
					{{/bp-layout}}
				</div>
			{{/bp-layout}}
			<div local-class="medic-access others">
				<h4 local-class="title" class="mb-4">药品准入情况</h4>
				{{#bp-layout local-class="content" }}
					{{#bp-layout tagName="p" direction="col" local-class="key" class="mr-3 mb-0" }}
						<span class="mb-3">药品通用名-药品名</span>
						<span class="mb-3">状态</span>
						<span>潜力值</span>
					{{/bp-layout}}
					{{#bp-layout tagName="p" direction="col" local-class="value" class="mb-0" }}
						<span class="mb-3">
							效尤-口服抗生素*</span>
						<span class="mb-3">
							{{dests.hospitalConfig.accessStatus}}
						</span>
						<span>
							{{dests.hospitalConfig.potential}}
						</span>
					{{/bp-layout}}
				{{/bp-layout}}
			</div>
			<div local-class="dynamic others">
				<h4 local-class="title" class="mb-4">医院动态</h4>
				{{#each dests.hospitalConfig.policies as |policy|}}
					<p local-class="content" class="mb-2">
						{{policy.describe}}
					</p>
				{{/each}}
			</div>
		</div>
		<div local-class="sell">
			<h4 local-class="title" class="mb-4">药品销售情况</h4>
			<div local-class="content">
			</div>
		</div>
	{{/bp-layout}}
{{/if}}