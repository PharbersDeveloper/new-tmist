{{#bp-layout tagName="h3" cross="center" local-class="title" class="px-4" }}
	<span class="mr-2" local-class="icon" {{action 'showContent'}}>
		{{bp-icon icon=icon}}
	</span>
	{{dests.hospitalConfig.hospital.name}}
{{/bp-layout}}
{{#if showContent}}
	{{#bp-layout direction="col" local-class="content" }}
		{{#bp-layout main="between" local-class="infos"}}
			{{#bp-layout main="between" local-class="basic" 
				classNames="p-4"}}
				{{#each dests.hospitalConfig.hospital.images as |img index|}}
					{{#if (bp-eq index 0)}}
						<img src={{img.img}} alt={{dests.hospitalConfig.hospital.name}} class="mr-4">
					{{/if}}
				{{/each}}
				<div local-class="properties">
					{{#bp-layout tagName="p" }}
						<span class="mr-3">成立时间</span>
						<span>
							{{dests.hospitalConfig.hospital.regtime}}
						</span>
					{{/bp-layout}}
					{{#bp-layout tagName="p" }}
						<span class="mr-3">医院等级</span>
						<span>
							{{dests.hospitalConfig.hospital.hospitalLevel}}
						</span>
					{{/bp-layout}}
					{{#bp-layout tagName="p" }}
						<span class="mr-3">医院类型</span>
						<span>
							{{dests.hospitalConfig.hospital.hospitalCategory}}
						</span>
					{{/bp-layout}}
					{{#bp-layout tagName="p" }}
						<span class="mr-3">空间所属</span>
						<span>{{dests.hospitalConfig.spaceBelongs}}</span>
					{{/bp-layout}}
				</div>
				<div local-class="properties">
					{{#bp-layout tagName="p" }}
						<span class="mr-3">医生数量</span>
						<span>{{dests.hospitalConfig.doctorNumber}}</span>
					{{/bp-layout}}
					{{#bp-layout tagName="p" }}
						<span class="mr-3">病床数量</span>
						<span>{{dests.hospitalConfig.bedNumber}}</span>
					{{/bp-layout}}
					{{#bp-layout tagName="p" }}
						<span class="mr-3">医药收入</span>
						<span>{{dests.hospitalConfig.income}}</span>
					{{/bp-layout}}
					{{#bp-layout tagName="p" }}
						<span class="mr-3">患者支付力</span>
						<span>
							{{dests.hospitalConfig.abilityToPay}}
						</span>
					{{/bp-layout}}
				</div>
			{{/bp-layout}}
			<div local-class="dynamic others" class="p-4">
				<h4 local-class="title" class="mb-2">医院动态</h4>
				{{#each dests.hospitalConfig.policies as |policy|}}
					<p local-class="content" class="mb-2">
						{{policy.describe}}
					</p>
				{{/each}}
			</div>
		{{/bp-layout}}
		{{#bp-layout main="between" local-class="sell"}}
			{{#bp-layout direction="col" local-class="medic-access"
				classNames="p-4"}}
				<h4 local-class="title" class="mb-3">药品准入情况</h4>
				{{#bp-layout}}
					{{#bp-layout direction="col" classNames="mr-5"}}
						<p local-class="keys">药品通用名-药品名</p>
						<p local-class="values">
							{{#each prods as |prod|}}
								{{#if (bp-eq prod.productConfig.productType "0")}}
									{{prod.productConfig.product.name}}
									-
									{{prod.productConfig.product.generalName}}
								{{/if}}
							{{/each}}
						</p>
					{{/bp-layout}}
					{{#bp-layout direction="col"  classNames="mr-5"}}
						<p local-class="keys">状态</p>
						<p local-class="values">准入*</p>
					{{/bp-layout}}
					{{#bp-layout direction="col"}}
						<p local-class="keys">潜力值</p>
						<p local-class="values">90505641*</p>
					{{/bp-layout}}
				{{/bp-layout}}
			{{/bp-layout}}
			{{#bp-layout direction="col" local-class="chart" 
			classNames="p-4"}}
				<h4 local-class="title" class="mb-2">药品销售额情况
					<span local-class="subtitle" class="ml-2">
						{{#each prods as |prod|}}
							{{#if (bp-eq prod.productConfig.productType "0")}}
								{{prod.productConfig.product.generalName}}
							{{/if}}
						{{/each}}
					</span>
				</h4>
				<div local-class="content"></div>
			{{/bp-layout}}
		{{/bp-layout}}
	{{/bp-layout}}
{{/if}}