{{common/nav-top-main}}
{{#bp-layout direction="col" main="center" cross="center" local-class="home"}}
    {{#bp-layout direction="row" main="between" cross="center" local-class="card-area" classNames="p-4"}}
        {{#each model.apm as |item| }}
        {{#bp-layout direction="col" main="start" cross="start" local-class="card-wrapper apm" classNames="p-3"}}
            {{#bp-layout direction="row" main="start" cross="center" local-class="title-wrapper"}}
                {{bp-icon icon="training"}}
                <p local-class="title" class="ml-2">训练</p>
            {{/bp-layout}}
            {{#bp-layout direction="col" main="start" cross="start" local-class="card-inner" classNames="p-4 bg-white"}}
                {{#bp-layout direction="col" main="start" cross="start" local-class="card-top"}}
                    <p local-class="title" class="mb-2">APM模拟练习</p>
                    <p local-class="subtitle">区域周期管理课程辅助培训工具</p>
                {{/bp-layout}}
                {{#bp-layout direction="row" main="end" cross="start" local-class="card-bottom"}}
                    {{#bp-button type="default" click=(action "toPrepare" item.id)}}
                        开始练习
                    {{/bp-button}}
                {{/bp-layout}}
            {{/bp-layout}}
        {{/bp-layout}}
        {{/each}}
        {{#each model.tmist as |item| }}
        {{#bp-layout direction="col" main="start" cross="start" local-class="card-wrapper ntm" classNames="p-3"}}
            {{#bp-layout direction="row" main="start" cross="center" local-class="title-wrapper"}}
                {{bp-icon icon="simulation"}}
                <p local-class="title" class="ml-2">模拟</p>
            {{/bp-layout}}
            {{#bp-layout direction="col" main="start" cross="start" local-class="card-inner" classNames="p-4 bg-white" click=(action "toPrepare" item.id)}}
                {{#bp-layout direction="col" main="start" cross="start" local-class="card-top"}}
                    {{#bp-layout direction="row" main="between" cross="center" local-class="card-top-inner" class="mb-2"}}
                        <p local-class="title">新铁马TMIST测试</p>
                        <p local-class="des">共{{item.totalPhase}}周期</p>
                    {{/bp-layout}}
                    <p local-class="subtitle">区域周期计划测试</p>
                {{/bp-layout}}
                {{#bp-layout direction="row" main="start" cross="start" local-class="card-bottom"}}
                    {{!-- <p local-class="subtitle">区域周期计划测试</p> --}}
                    {{#if model.currentUCBProjects}}
                        <span local-class="badge">进行中</span>
                        <p local-class="des" class="ml-2">上次中断时间 {{model.currentUCBProjects.lastObject.lastUpdate}}</p>
                    {{/if}}
                   
                {{/bp-layout}}
            {{/bp-layout}}
        {{/bp-layout}}
        {{/each}}
        {{#each model.ucb as |item| }}
        {{#bp-layout direction="col" main="start" cross="start" local-class="card-wrapper ucb" classNames="p-3"}}
            {{#bp-layout direction="row" main="start" cross="center" local-class="title-wrapper"}}
                {{bp-icon icon="case"}}
                <p local-class="title" class="ml-2">案例</p>
            {{/bp-layout}}
            {{#bp-layout direction="col" main="start" local-class="card" click=(action "toPrepare" itme.id)}}
                <img src="/images/img_case-ucb.jpg" alt="UCB" local-class="card-pic" class="">
                {{#bp-layout direction="col" main="start" cross="start" local-class="card-inner" classNames="p-4 bg-white"}}
                    {{#bp-layout direction="col" main="start" cross="start" local-class="card-top"}}
                        <p local-class="title" class="mb-2">UCB</p>
                        <p local-class="subtitle">项目描述</p>
                    {{/bp-layout}}
                {{/bp-layout}}
            {{/bp-layout}}
        {{/bp-layout}}
        {{/each}}
    {{/bp-layout}}
{{/bp-layout}}