<div local-class="hospital-box" class="hospital-box mb-3 p-2">
	{{#bp-layout tagName="h4" local-class="title" classNames="m-0"}}
		{{quiz.hospital.name}}
	{{/bp-layout}}
	{{#bp-layout classNames="pt-3" local-class="infos-container"}}
		{{#bp-layout local-class="item"}}
			{{#bp-layout direction="col" local-class="keys" classNames="mr-2"}}
				<span class="mb-1">潜力</span>
				{{!-- <span>预算</span> --}}
				<span>销售指标</span>
			{{/bp-layout}}
			{{#bp-layout direction="col" local-class="values"}}
				<span class="mb-1">
					￥{{format-number quiz.quizs.firstObject.preset.potential 0}}
				</span>
				<span>
					￥{{format-number quiz.quizs.firstObject.preset.salesQuota 0}}
				</span>
			{{/bp-layout}}
		{{/bp-layout}}
		{{#bp-layout local-class="item"}}
			{{#bp-layout direction="col" local-class="keys" classNames="mr-2"}}
				<span class="mb-1">代表名称</span>
			{{/bp-layout}}
			{{#bp-layout direction="col" local-class="values"}}
				<span class="mb-1">
					{{#if quiz.quizs.firstObject.answer.resource}}
						{{quiz.quizs.firstObject.answer.resource.name}}
					{{else}}
						-
					{{/if}}
				</span>
			{{/bp-layout}}
		{{/bp-layout}}
	{{/bp-layout}}
</div>