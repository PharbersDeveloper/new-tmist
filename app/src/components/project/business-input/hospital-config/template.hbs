{{#bp-layout tagName="h5" cross="center" local-class="title" classNames="m-0 px-4 bg-white"}}
	药品相关资源设定
{{/bp-layout}}
{{#bp-layout local-class="hospital-resource" class="p-4 bg-white"}}
	<table local-class="prod" class="table mb-2">
		<thead class='bg-white px-2'>
			<tr>
				<th class="border-0 pb-2 pr-2 pl-0 text-left">产品名称</th>
				<th class="border-0 pb-2 px-2 text-left">药品潜力</th>
				<th class="border-0 pb-2 px-2 text-left">上季度销售额</th>
				<th class="border-0 pb-2 px-2 text-center">销售指标分配</th>
				<th class="border-0 pb-2 pl-2 text-center ">预算分配</th>
			</tr>
		</thead>
		<tbody class="bg-white">
			{{#each quizs as |quiz|}}
				<tr class="mx-0 mx-4">
					<td class="pr-2 border-0 text-left">
						{{quiz.preset.product.name}}
					</td>
					<td class="px-2 border-0 text-left">
						￥{{format-number quiz.preset.potential}}
					</td>
					<td class="px-2 border-0 text-left">
						￥{{format-number quiz.preset.lastQuota}}
					</td>
					<td class="border-0">
						{{#bp-layout main="center" direction="row"}}
							{{bp-input block=true  
									value=quiz.answer.salesTarget
									onChange=(action "salesTargetValidation" quiz.answer "salesTarget" (mut quiz.answer.salesTarget))
									disabled=false
									local-class="input-prepend input-money sales-input"
									classNames="mb-2 px-0"}}
						{{/bp-layout}}
						{{!-- <span class="mt-2 mb-0 text-center" local-class="percent">
							{{IndicatorAllocationPercent.percent}}56%
						</span> --}}
					</td>
					<td class="border-0">
						{{#bp-layout main="center" direction="row"}}
						{{bp-input block=true 
							value=quiz.answer.budget
							onChange=(action "budgetValidation" quiz.answer "budget" (mut quiz.answer.budget))
							disabled=false
							classNames="px-0 mb-2"
							local-class="input-prepend input-money budget-input"}}
							{{/bp-layout}}
						{{!-- <span class="mt-2 mb-0 text-center" local-class="percent">
							{{budgetPercent.percent}}56%
						</span> --}}
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
{{/bp-layout}}

{{#if (bp-eq proposal.case "tm")}}
{{#bp-layout main='between' local-class="meeting-place" classNames='py-4 bg-white'}}
	{{#bp-layout main='between' cross='center' local-class='item' classNames='px-4'}}
		<span local-class="keys" class='mr-3'>分配会议名额</span>
		{{bp-input
					value=quizs.firstObject.answer.meetingPlaces
					disabled=false
					onChange=(action "meetingPlacesValidation" quizs.firstObject.answer "meetingPlaces" (mut quizs.firstObject.answer.meetingPlaces))
					local-class="input-prepend input-meeting operating"}}
	{{/bp-layout}}
	{{#bp-layout main='between' cross='center' local-class='item' classNames='px-4'}}
	{{/bp-layout}}
	{{#bp-layout main='between' cross='center' local-class='item' classNames='px-4'}}
	{{/bp-layout}}
{{/bp-layout}}
{{/if}}
{{/bs-collapse}}
