{{#bp-layout local-class="header"}}
	{{#bp-layout tagName="h4" main='between' cross="center" local-class="title" classNames="px-4  bg-white mb-0" }}
		{{#bp-layout direction="row" main="start"}}
			{{#bp-layout click=(action "changedResource" quizs.firstObject.answer) local-class=(if hasResource "icon-active")}}{{bp-icon icon="check-circle" }}{{/bp-layout}}
			{{hospital.name}}
		{{/bp-layout}}
		{{#bp-layout direction="row" cross="center"}}
			{{#if hasResource}}
				{{#bp-layout direction="row" local-class="item-right" cross="center" classNames="mr-2"}}
					{{#bp-layout local-class="badge" class="px-1"}}
						{{bp-icon icon="representative"}}
						{{quizs.firstObject.answer.resource.name}}
					{{/bp-layout}}
				{{/bp-layout}}
			{{/if}}
			
			{{#if (bp-not-eq quizs.firstObject.answer.meetingPlaces -1 0 "" "0")}}
				
				{{#bp-layout direction="row" local-class="item-right" cross="center" classNames="mr-2"}}
					{{#bp-layout local-class="badge" class="px-1"}}
						{{bp-icon icon="meeting-quota"}}
						{{quizs.firstObject.answer.meetingPlaces}}
					{{/bp-layout}}
				{{/bp-layout}}
				
			{{/if}}
			{{#bp-button local-class="icon-btn" onClick=(action 'selectCurHospital' hospital.id)}}{{bp-icon icon='data'}}{{/bp-button}}
		{{/bp-layout}}
	{{/bp-layout}}
{{/bp-layout}}
{{#bs-collapse collapsed=showContent}}
