					<span local-class="unit">
						{{t "project.business-input.number"}}
					</span>
				</p>
				{{#bp-progress as |p|}}
					{{p.bar value=currentMeetingPlaces maxValue=project.proposal.quota.meetingPlaces}}
				{{/bp-progress}}
