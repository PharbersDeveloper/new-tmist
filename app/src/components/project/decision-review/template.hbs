{{#bp-layout local-class="review" direction="col"}}
	{{#bp-layout direction="row" local-class="review-header" classNames="bg-white px-4" main="between"}}
		{{#bp-layout direction="col"}}
			{{#bp-layout tagName="h2" local-class="title" classNames="pt-4 pb-1"}}决策回顾{{/bp-layout}}
			{{#bp-layout tagName="p" local-class="time-info"}}
				<span>日期</span>
				<span class="ml-1 mr-4">2019-04-10 17:00:34</span>
				<span>用时 50分钟</span>
			{{/bp-layout}}
		{{/bp-layout}}
		{{#bp-layout direction="row" cross="center"}}
			{{#bp-button local-class="export-btn" }}
				导出
			{{/bp-button}}
		{{/bp-layout}}
	{{/bp-layout}}
	{{#bp-layout direction="row" local-class="btn-group-sytle" main="center" classNames="mb-4"}}
		{{#bp-button onClick=(action (mut curDecisionReview) 0)}}业务决策回顾{{/bp-button}}
		{{#bp-button onClick=(action (mut curDecisionReview) 1)}}管理决策回顾{{/bp-button}}
	{{/bp-layout}}

	{{#bp-layout local-class="content"}}
		{{#if (bp-eq curDecisionReview 0)}}
			{{project/decision-review/business-review}}
		{{else}}
			{{project/decision-review/management-review}}
		{{/if}}
	{{/bp-layout}}
{{/bp-layout}}