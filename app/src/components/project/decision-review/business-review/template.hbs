{{#bp-layout local-class="business-review" direction="col" classNames="bg-white"}}
	{{#bp-layout local-class="select-part" direction="row" main="between" cross="center"}}
		{{#bp-layout direction="row" local-class="part" classNames="pl-4" cross="center"}}
			{{#bp-layout classNames="mr-3"}}选择季度{{/bp-layout}}
			{{#bp-layout}}
				{{#bp-dropdown local-class="btn-list" widthSize="auto" as |dd|}}
					{{#dd.button }}	
						{{#if curPeriod}}
						{{curPeriodIndex}}
						{{else}}
						请选择
						{{/if}}
						{{bp-icon icon='down'}}
					{{/dd.button}}
					{{#dd.menu as |menu|}}
						{{#each periodRange as |item|}}
							{{#menu.option value=item onClick=(action (mut curPeriodIndex))}}
								{{item}}
							{{/menu.option}}
						{{/each}}
					{{/dd.menu}}
				{{/bp-dropdown}}
			{{/bp-layout}}
		{{/bp-layout}}
		{{#bp-layout direction="row" local-class="part" cross="center"}}
			{{#bp-layout classNames="mr-3"}}选择药品{{/bp-layout}}
			{{#bp-layout}}
				{{#bp-dropdown local-class="btn-list" widthSize="auto" as |dd|}}
					{{#dd.button }}
						{{#if curProd}}
						{{curProd.name}}
						{{else}}
						请选择
						{{/if}}
						{{bp-icon icon='down'}}
					{{/dd.button}}
					{{#dd.menu as |menu|}}
						{{#each products as |item|}}
							{{#menu.option value=item onClick=(action (mut curProd))}}
								{{item.name}}
							{{/menu.option}}
						{{/each}}
					{{/dd.menu}}
				{{/bp-dropdown}}
			{{/bp-layout}}
		{{/bp-layout}}
		{{#bp-layout direction="row" local-class="part" cross="center"}}
			{{#bp-layout classNames="mr-3"}}选择代表{{/bp-layout}}
			{{#bp-layout}}
				{{#bp-dropdown local-class="btn-list" widthSize="auto" as |dd|}}
					{{#dd.button }}
						{{#if curRes}}
						{{curRes.name}}
						{{else}}
						请选择
						{{/if}}
						{{bp-icon icon='down'}}
					{{/dd.button}}
					{{#dd.menu as |menu|}}
						{{#each resources as |rcs|}}
							{{#menu.option value=rcs onClick=(action (mut curRes))}}
								{{rcs.name}}
							{{/menu.option}}
						{{/each}}
					{{/dd.menu}}
				{{/bp-dropdown}}
			{{/bp-layout}}
		{{/bp-layout}}
	{{/bp-layout}}
	{{#bp-layout local-class="table"}}
		{{#bp-layout tagName="table" direction="col" classNames="mx-4" }}
			{{#bp-layout tagName="thead" main="between" }}
				{{#bp-layout tagName="th"}}医院名称{{/bp-layout}}
				{{#bp-layout tagName="th"}}产品名称{{/bp-layout}}
				{{#bp-layout tagName="th"}}代表{{/bp-layout}}
				{{#bp-layout tagName="th"}}分配时间{{/bp-layout}}
				{{#bp-layout tagName="th"}}销售目标设定{{/bp-layout}}
				{{#bp-layout tagName="th"}}预算费用{{/bp-layout}}
				{{#bp-layout tagName="th"}}会议名额{{/bp-layout}}
			{{/bp-layout}}
			{{#bp-layout tagName="tbody" direction="col"}}
				{{#each filterAnswers as |item|}}
				{{log item}}
				{{#bp-layout tagName="tr" main="between" classNames="py-2"}}
					{{#bp-layout tagName="td"}}{{item.target.name}}{{/bp-layout}}
					{{#bp-layout tagName="td"}}{{item.product.name}}{{/bp-layout}}
					{{#bp-layout tagName="td"}}{{item.resource.name}}{{/bp-layout}}
					{{#bp-layout tagName="td"}}{{item.visitTime}}%{{/bp-layout}}
					{{#bp-layout tagName="td"}}{{item.salesTarget}}{{/bp-layout}}
					{{#bp-layout tagName="td"}}{{item.budget}}{{/bp-layout}}
					{{#bp-layout tagName="td"}}{{item.meetingPlaces}}{{/bp-layout}}
				{{/bp-layout}}
				{{/each}}
			{{/bp-layout}}
		{{/bp-layout}}
	{{/bp-layout}}
{{/bp-layout}}