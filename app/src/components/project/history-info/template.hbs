{{#bp-layout local-class="history-table-outer"}}
	<table local-class="history-table" class="table mb-2">
		<thead class='px-2'>
			<tr>
				{{#if (bp-eq provious.firstObject.proposal.case "tm")}}
				<th class="border-0 pb-2 pr-2 pl-0 text-left">获得称号</th>
				{{/if}}
				<th class="border-0 pb-2 px-2 text-center">总指标达成率</th>
				<th class="border-0 pb-2 px-2 text-center">总销售额</th>
				{{#if (bp-eq provious.firstObject.proposal.case "tm")}}
				<th class="border-0 pb-2 px-2 text-center">分季度销售指标达成率</th>
				{{/if}}
				<th class="border-0 pb-2 pl-2 text-center ">用时</th>
				<th class="border-0 pb-2 pl-2 text-center ">完成时间</th>
			</tr>
		</thead>
		<tbody class="">
			{{#each proviousReport as |pr|}}
			<tr class="mx-0 mx-4">
				{{#if (bp-eq provious.firstObject.proposal.case "tm")}}
				<td class="pl-0 border-0 text-left">
					{{#bp-layout direction="row" main="start" cross="center" local-class="level"}}
						<img src="/images/img_placeholder.png" alt="level" local-class="level-img">
						<p local-class="des">黄金</p>
					{{/bp-layout}}
				</td>
				{{/if}}
				<td class="px-2 border-0 text-center">
					{{#bp-layout direction="row" main="center" cross="center" local-class="total-percent"}}
						<p local-class="num">90</p>
						<p local-class="unit">%</p>
					{{/bp-layout}}
				</td>
				<td class="px-2 border-0 text-center">
					{{#bp-layout local-class="total-sales" main="center" direction="row"}}
							{{calc-total-sales pr.reports}}
							{{log pr.reports}}
					{{/bp-layout}}
				</td>
				{{#if (bp-eq provious.firstObject.proposal.case "tm")}}
				<td class="border-0 text-center">
					{{#bp-layout direction="row" local-class="quarter-sales-reached" main="between"}}
						{{#bp-layout direction="col" local-class="info"}}
							<span>2019Q1</span>
							<span>60%</span>
						{{/bp-layout}}
						{{#bp-layout direction="col" local-class="info"}}
							<span>2019Q1</span>
							<span>60%</span>
						{{/bp-layout}}
						{{#bp-layout direction="col" local-class="info"}}
							<span>2019Q1</span>
							<span>60%</span>
						{{/bp-layout}}
					{{/bp-layout}}
				</td>
				{{/if}}
				<td class="border-0 text-center">
					{{#bp-layout local-class="used-time" main="center" direction="row"}}
							{{!-- 1小时30分钟 --}}
							{{time-difference pr.project.startTime pr.project.endTime}}
					{{/bp-layout}}
				</td>
				<td class="border-0 text-center">
					{{#bp-layout local-class="end-time" main="center" direction="row"}}
							{{!-- 2019-04-08 18:40 --}}
							{{format-date-standard pr.project.endTime}}
					{{/bp-layout}}
				</td>
				<td class="px-2 border-0 text-center">
					
					{{#if (bp-eq provious.firstObject.proposal.case "tm")}}
					{{#bp-layout direction="row" main="end"}}
						{{#bp-dropdown local-class="btn-list" widthSize="auto" as |dd|}}
							{{#dd.button }}
								查看
								{{bp-icon icon='down'}}
							{{/dd.button}}
							{{#dd.menu as |menu|}}
								{{#menu.option click=(action "performance")}}测试综合表现{{/menu.option}}
								{{#menu.option }}周期销售结果{{/menu.option}}
								{{!-- {{#menu.option click=(action "review" provious.lastObject.id)}}决策回顾{{/menu.option}} --}}
								{{#menu.option }}决策回顾{{/menu.option}}
							{{/dd.menu}}
						{{/bp-dropdown}}
					{{/bp-layout}}
					{{else if (bp-eq provious.firstObject.proposal.case "ucb")}}
						{{#link-to "page.prepare"}}周期销售报告{{/link-to}}
					{{/if}}
				</td>
				<td class="px-2 border-0 text-center">
					
					{{#if (bp-eq provious.firstObject.proposal.case "tm")}}
					{{#bp-layout direction="row" main="end"}}
						{{#bp-dropdown local-class="btn-list" widthSize="auto" as |dd|}}
							{{#dd.button }}
								导出
								{{bp-icon icon='down'}}
							{{/dd.button}}
							{{#dd.menu as |menu|}}
								{{#menu.option}}测试综合表现{{/menu.option}}
								{{#menu.option}}周期销售结果{{/menu.option}}
								{{#menu.option}}决策回顾{{/menu.option}}
							{{/dd.menu}}
						{{/bp-dropdown}}
					{{/bp-layout}}
					{{else if (bp-eq provious.firstObject.proposal.case "ucb")}}
							{{#bp-button}}
								{{bp-icon icon="export" local-class="icon"}}导出数据
							{{/bp-button}}
					{{/if}}
				</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
{{/bp-layout}}
{{#bp-modal
        local-class="modal"
        size="lg"
		open=performance.open 
		position="center"
		onHidden=(action (mut performance.open) false) as |modal|}}
	{{#modal.header classNames="pb-0"}}
	{{/modal.header}}
	{{#modal.body classNames="p-4"}}
		{{project/comprehensive-performance}}
	{{/modal.body}}
	{{#modal.footer}}
		{{#bp-button type="primary" onClick=(action modal.close)}}确定{{/bp-button}}
	{{/modal.footer}}
{{/bp-modal}}
{{log periods}}