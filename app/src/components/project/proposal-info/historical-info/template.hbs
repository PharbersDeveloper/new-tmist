{{#bp-layout local-class="historical-sales-container" main="center"}}
	{{#bp-layout tagName="ul" direction="col" local-class="nav" classNames="mr-4 p-4 bg-white"}}
		{{#bp-layout tagName="li" cross="center" local-class=(if (bp-eq salesGroupValue 0) "active") classNames="px-4"}}
			<span {{action "changeSalesValue" 0}}
				role="button">{{t "project.proposal-info.product-info.produce-sale-report"}}</span>
		{{/bp-layout}}
		{{#bp-layout tagName="li" cross="center" local-class=(if (bp-eq salesGroupValue 1) "active") classNames="px-4"}}
			<span {{action "changeSalesValue" 1}}role="button">
				{{t "project.proposal-info.product-info.representative-sale-report"}}
			</span>
		{{/bp-layout}}
		{{#bp-layout tagName="li" cross="center" local-class=(if (bp-eq salesGroupValue 2) "active")
					classNames="px-4"}}
			<span {{action "changeSalesValue" 2}}
				role="button">{{t "project.proposal-info.product-info.hospital-sale-report"}}</span>
		{{/bp-layout}}
		{{#bp-layout tagName="li" cross="center" local-class=(if (bp-eq salesGroupValue 3) "active") classNames="px-4"}}
			<span {{action "changeSalesValue" 3}} role="button">
				地区销售报告
			</span>
		{{/bp-layout}}
	{{/bp-layout}}
	{{#bp-layout local-class="content"}}
		{{#if (bp-eq salesGroupValue 0)}}
			<div local-class="report product">
				{{#bp-layout tagName="h2" cross="center" local-class="title"
				 classNames="m-0 bg-white px-4"}}
					产品销售结构分布图
				{{/bp-layout}}
				{{!-- {{#bp-layout cross="between"}}
					{{#bp-layout direction="col" tagName="h2" cross="" local-class="title"
					classNames="m-0 bg-white px-4"}}
						2018Q4 销售额
					{{/bp-layout}}
					{{#bp-layout direction="col" tagName="h2" cross="" local-class="title"
					classNames="m-0 bg-white px-4"}}
						2019Q1 销售额
					{{/bp-layout}}
				{{/bp-layout}} --}}
				{{#bp-layout direction='row'}}
					<div local-class='circle-left' class="bg-white pb-4">
						{{#bp-layout tagName='h2' cross='center' classNames='px-4 py-3 m-0' local-class='title'}}
							{{product0Legend.firstObject.date}}
						{{/bp-layout}}
						{{bp-row direction='col' rowModel=tmProductCircle0 conditions=tmProductCircleCondition onQueryReady=(action 'dealData')}}
						{{#bp-layout direction="row" main='center'}}
							<div>
								{{#each product0Legend as |prod|}}
									<p local-class='circle-legend' class="mb-1">
										<span local-class='point' style={{prod.color}}></span>
										<span local-class='name' class="mr-3">{{prod.product}}</span>
									</p>
								{{/each}}
							</div>
							<div>
								{{#each product0Legend as |prod|}}
									<p local-class='circle-legend' class="mb-1">
										<span local-class='value' class="mr-2">{{bp-percent prod.salesRate}}</span>
									</p>
								{{/each}}
							</div>
							<div>
								{{#each product0Legend as |prod|}}
									<p local-class='circle-legend' class="mb-1">
										<span local-class='value'>¥{{format-number prod.sales}}</span>
									</p>
								{{/each}}
							</div>
						{{/bp-layout}}
					</div>
					<div local-class='circle-right'>
						{{bp-row direction='col' rowModel=tmProductCircle1 conditions=tmProductCircleCondition}}
					</div>
				{{/bp-layout}}
				{{bp-row direction='col' rowModel=tmProductBarLine0  conditions=tmProductBarLineCondition}}
				{{#bp-layout direction="col"}}
					{{!-- {{#bp-layout main="between" local-class="choose-container"
						classNames="mb-4 bg-white"}}
						{{#bp-layout main="between" cross="center"
							local-class="choose-area" 
							classNames="px-4"}}
							<span local-class="keys" class="mr-4">选择药品</span>
							{{#bp-dropdown widthSize="auto"
								local-class="dd-medicines dd-area" as |dd|}}
								{{#dd.button}}
									{{#if tmpPsr.id}}
										<p>{{tmpPsr.productName}}</p>
									{{else}}
										全部选择
									{{/if}}
									{{bp-icon icon="down"}}
								{{/dd.button}}
								{{#dd.menu as |menu|}}
									{{#menu.option value=totalProduct
												onClick=(action (mut tmpPsr))}}
										全部选择
									{{/menu.option}}
									{{#each model.productSalesReports as |psrs|}}
										{{#menu.option value=psrs
												onClick=(action (mut tmpPsr))}}
											{{psrs.productName}}
										{{/menu.option}}
									{{/each}}
								{{/dd.menu}}
							{{/bp-dropdown}}
						{{/bp-layout}}
						<div local-class="choose-area" class="px-4"></div>
					{{/bp-layout}} --}}
					<div local-class="table-container">
						<table class="table">
							<thead>
								<th>{{t "project.proposal-info.product-info.drug-name"}}</th>
								{{#each tableHead as |tcontent|}}
									<th>{{tcontent}}</th>
								{{/each}}
							</thead>
							<tbody class="bg-white">
								{{#each model.prodTableBody as |trContent|}}
									{{#if (bp-eq trContent.goodsConfig.productConfig.productType 0)}}
										<tr>
											<td>
												{{trContent.goodsConfig.productConfig.product.name}}
											</td>
											{{#each trContent.tableTr as |tdContent|}}
												{{!-- <td>￥{{format-number tdContent}}</td> --}}
												{{#if (type-number tdContent)}}
													<td>{{t "project.proposal-info.product-info.money"}}{{format-number tdContent 0}}
													</td>
												{{else}}
													<td>{{tdContent}}</td>
												{{/if}}
											{{/each}}
										</tr>
									{{/if}}
									{{!-- {{#if (bp-not-eq tmpPsr.productName undefined "全部选择")}}
										{{#if (bp-eq tmpPsr.productName trContent.name)}}
											<tr>
												<td>{{trContent.name}}</td>
												{{#each trContent.tableTr as |tdContent|}}
													<td>￥{{format-number tdContent}}</td>
												{{/each}}
											</tr>
										{{/if}}
									{{else}}
										<tr>
											<td>{{trContent.name}}</td>
											{{#each trContent.tableTr as |tdContent|}}
												<td>￥{{format-number tdContent}}</td>
											{{/each}}
										</tr>
									{{/if}} --}}
								{{/each}}
							</tbody>
						</table>
					</div>
				{{/bp-layout}}
			</div>
		{{else if (bp-eq salesGroupValue 1)}}
			<div local-class="report representative">
				{{#bp-layout tagName="h2" cross="center" local-class="title"
				 classNames="m-0 bg-white px-4"}}
					{{t "project.proposal-info.product-info.representative-sale-report"}}
				{{/bp-layout}}
				{{#bp-button onClick=(action 'changeCondition')}} changeCondition example{{/bp-button}}
				{{#bp-button onClick=(action 'changeConditionBack')}} changeConditionback example{{/bp-button}}
				{{#bp-layout}}
					<div local-class='circle-left'>
						{{bp-row direction='col' rowModel=tmRepCircle0 conditions=tmRepCircleCondition}}
					</div>
					<div local-class='circle-right'>
						{{bp-row direction='col'  rowModel=tmRepCircle1 conditions=tmRepCircleCondition}}
					</div>
				{{/bp-layout}}
				{{bp-row direction='col' rowModel=tmRepBarLine0  conditions=tmRepBarLineCondition}}
				{{#bp-layout direction="col" local-class="table-container" classNames="bg-white"}}
					<table class="table">
						<thead>
							<th>{{t "project.proposal-info.product-info.representative-name"}}</th>
							<th>{{t "project.proposal-info.product-info.potential"}}</th>
							{{#each tableHead as |thContent|}}
								<th>{{thContent}}</th>
							{{/each}}
						</thead>
						<tbody>
							{{#each model.repTableBody as |trContent|}}
								<tr>
									<td>
										{{trContent.resourceConfig.representativeConfig.representative.name}}
									</td>
									<td>{{t "project.proposal-info.product-info.money"}}{{format-number trContent.potential}}
									</td>
									{{#each trContent.tableTr as |tdContent|}}
										{{#if (type-number tdContent)}}
											<td>{{t "project.proposal-info.product-info.money"}}{{format-number tdContent 0}}
											</td>
										{{else}}
											<td>{{tdContent}}</td>
										{{/if}}
									{{/each}}
								</tr>
							{{/each}}
						</tbody>
					</table>
				{{/bp-layout}}
			</div>
		{{else if (bp-eq salesGroupValue 2)}}
			<div local-class="report hospital">
				{{#bp-layout tagName="h2" cross="center" local-class="title"
				 classNames="m-0 bg-white px-4"}}
					{{t "project.proposal-info.product-info.hospital-sale-report"}}
				{{/bp-layout}}
				{{#bp-layout}}
					<div local-class='circle-left'>
						{{bp-row direction='col' rowModel=tmHosCircle0 conditions=tmHosCircleCondition}}
					</div>
					<div local-class='circle-right'>
						{{bp-row direction='col'  rowModel=tmHosCircle1 conditions=tmHosCircleCondition}}
					</div>
				{{/bp-layout}}
				{{bp-row direction='col' rowModel=tmHosBarLine0 conditions=tmHosBarLineCondition}}
				{{#bp-layout direction="col" local-class="table-container" classNames="bg-white"}}
					<table class="table">
						<thead>
							<th>{{t "project.proposal-info.product-info.hospital-name"}}</th>
							<th>{{t "project.proposal-info.product-info.hospital-representative"}}</th>
							<th>{{t "project.proposal-info.product-info.potential"}}</th>
							{{#each tableHead as |tcontent|}}
								<th>{{tcontent}}</th>
							{{/each}}
						</thead>
						<tbody>
							{{#each model.hospTableBody as |trContent|}}
								<tr>
									<td>
										{{trContent.destConfig.hospitalConfig.hospital.name}}
									</td>
									<td>
										{{trContent.resourceConfig.representativeConfig.representative.name}}
									</td>
									<td>{{t "project.proposal-info.product-info.money"}}{{format-number trContent.potential}}
									</td>
									{{#each trContent.tableTr as |tdContent|}}
										{{#if (type-number tdContent)}}
											<td>{{t "project.proposal-info.product-info.money"}}{{format-number tdContent 0}}
											</td>
										{{else}}
											<td>{{tdContent}}</td>
										{{/if}}
									{{/each}}
								</tr>
							{{/each}}
						</tbody>
					</table>
				{{/bp-layout}}
			</div>
		{{else if (bp-eq salesGroupValue 3)}}
			<div local-class="report hospital">
				{{#bp-layout tagName="h2" cross="center" local-class="title"
						 classNames="m-0 bg-white px-4"}}
					地区销售结构分布图
				{{/bp-layout}}
				{{#bp-layout}}
					<div local-class='circle-left'>
						{{bp-row direction='col' rowModel=tmRegCircle0 conditions=tmRegCircleCondition}}
					</div>
					<div local-class='circle-right'>
						{{bp-row direction='col'  rowModel=tmRegCircle1 conditions=tmRegCircleCondition}}
					</div>
				{{/bp-layout}}
				{{bp-row direction='col' rowModel=tmRegBarLine0 conditions=tmRegBarLineCondition}}
				{{#bp-layout direction="col" local-class="table-container" classNames="bg-white"}}
					<table class="table">
						<thead>
							<th>{{t "project.proposal-info.product-info.hospital-name"}}</th>
							<th>{{t "project.proposal-info.product-info.hospital-representative"}}</th>
							<th>{{t "project.proposal-info.product-info.potential"}}</th>
							{{#each tableHead as |tcontent|}}
								<th>{{tcontent}}</th>
							{{/each}}
						</thead>
						<tbody>
							{{#each model.hospTableBody as |trContent|}}
								<tr>
									<td>
										{{trContent.destConfig.hospitalConfig.hospital.name}}
									</td>
									<td>
										{{trContent.resourceConfig.representativeConfig.representative.name}}
									</td>
									<td>{{t "project.proposal-info.product-info.money"}}{{format-number trContent.potential}}
									</td>
									{{#each trContent.tableTr as |tdContent|}}
										{{#if (type-number tdContent)}}
											<td>{{t "project.proposal-info.product-info.money"}}{{format-number tdContent 0}}
											</td>
										{{else}}
											<td>{{tdContent}}</td>
										{{/if}}
									{{/each}}
								</tr>
							{{/each}}
						</tbody>
					</table>
				{{/bp-layout}}
			</div>
		{{/if}}
	{{/bp-layout}}
{{/bp-layout}}