{{#bp-layout local-class="historical-sales-container"}}
	{{#bp-layout tagName="ul" direction="col" local-class="nav" classNames="mr-4 p-4 bg-white"}}
		{{#bp-layout tagName="li" cross="center" 
					local-class=(if (bp-eq salesGroupValue 0) "active")
					classNames="px-4"}}
			<span {{action "changeSalesValue" 0}} role="button">{{t "project.proposal-info.product-info.produce-sale-report"}}</span>
		{{/bp-layout}}
		{{#bp-layout tagName="li" cross="center" 
					local-class=(if (bp-eq salesGroupValue 1) "active")
					classNames="px-4"}}
			<span {{action "changeSalesValue" 1}} role="button">{{t "project.proposal-info.product-info.representative-sale-report"}}</span>
		{{/bp-layout}}
		{{#bp-layout tagName="li" cross="center" 
					local-class=(if (bp-eq salesGroupValue 2) "active")
					classNames="px-4"}}
			<span {{action "changeSalesValue" 2}} role="button">{{t "project.proposal-info.product-info.hospital-sale-report"}}</span>
		{{/bp-layout}}
		{{#bp-layout tagName="li" cross="center" 
							local-class=(if (bp-eq salesGroupValue 3) "active")
							classNames="px-4"}}
			<span {{action "changeSalesValue" 3}} role="button">
				地区销售报告
				</span>
		{{/bp-layout}}
	{{/bp-layout}}
	{{#bp-layout local-class="content"}}
		{{#if (bp-eq salesGroupValue 0)}}
			<div local-class="report product">
				{{#bp-layout tagName="h2" cross="center" local-class="title"
				 classNames="m-0 bg-white px-4"}}
					产品销售结构分布图
				{{/bp-layout}}
				{{#bp-layout cross="between"}}
					{{#bp-layout direction="col" tagName="h2" cross="" local-class="title"
					classNames="m-0 bg-white px-4"}}
						2018Q4 销售额
					{{/bp-layout}}
					{{#bp-layout direction="col" tagName="h2" cross="" local-class="title"
					classNames="m-0 bg-white px-4"}}
						2019Q1 销售额
					{{/bp-layout}}
				{{/bp-layout}}
			</div>
		{{else if (bp-eq salesGroupValue 1)}}
			<div local-class="report representative">
				{{#bp-layout tagName="h2" cross="center" local-class="title"
				 classNames="m-0 bg-white px-4"}}
					{{t "project.proposal-info.product-info.representative-sale-report"}}
				{{/bp-layout}}
				{{#bp-layout direction="col" local-class="table-container" classNames="bg-white"}}
					<table class="table">
						<thead>
							<th>{{t "project.proposal-info.product-info.representative-name"}}</th>
							<th>{{t "project.proposal-info.product-info.potential"}}</th>
							{{#each tableHead as |thContent|}}
								<th>{{thContent}}</th>
							{{/each}}
						</thead>
						<tbody>
							{{#each model.repTableBody as |trContent|}}
								<tr>
									<td>
										{{trContent.resourceConfig.representativeConfig.representative.name}}
									</td>
									<td>{{t "project.proposal-info.product-info.money"}}{{format-number trContent.potential}}</td>
									{{#each trContent.tableTr as |tdContent|}}
										{{#if (type-number tdContent)}}
											<td>{{t "project.proposal-info.product-info.money"}}{{format-number tdContent 0}}</td>
										{{else}}
											<td>{{tdContent}}</td>
										{{/if}}
									{{/each}}
								</tr>
							{{/each}}
						</tbody>
					</table>
				{{/bp-layout}}
			</div>
		{{else if (bp-eq salesGroupValue 2)}}
			<div local-class="report hospital">
				{{#bp-layout tagName="h2" cross="center" local-class="title"
				 classNames="m-0 bg-white px-4"}}
					{{t "project.proposal-info.product-info.hospital-sale-report"}}
				{{/bp-layout}}
				{{#bp-layout direction="col" local-class="table-container" classNames="bg-white"}}
					<table class="table">
						<thead>
							<th>{{t "project.proposal-info.product-info.hospital-name"}}</th>
							<th>{{t "project.proposal-info.product-info.hospital-representative"}}</th>
							<th>{{t "project.proposal-info.product-info.potential"}}</th>
							{{#each tableHead as |tcontent|}}
								<th>{{tcontent}}</th>
							{{/each}}
						</thead>
						<tbody>
							{{#each model.hospTableBody as |trContent|}}
								<tr>
									<td>
										{{trContent.destConfig.hospitalConfig.hospital.name}}
									</td>
									<td>
										{{trContent.resourceConfig.representativeConfig.representative.name}}
									</td>
									<td>{{t "project.proposal-info.product-info.money"}}{{format-number trContent.potential}}</td>
									{{#each trContent.tableTr as |tdContent|}}
										{{#if (type-number tdContent)}}
											<td>{{t "project.proposal-info.product-info.money"}}{{format-number tdContent 0}}</td>
										{{else}}
											<td>{{tdContent}}</td>
										{{/if}}
									{{/each}}
								</tr>
							{{/each}}
						</tbody>
					</table>
				{{/bp-layout}}
			</div>
		{{else if (bp-eq salesGroupValue 3)}}
			<div local-class="report hospital">
				{{#bp-layout tagName="h2" cross="center" local-class="title"
						 classNames="m-0 bg-white px-4"}}
					地区销售结构分布图
				{{/bp-layout}}
				{{#bp-layout direction="col" local-class="table-container" classNames="bg-white"}}
					<table class="table">
						<thead>
							<th>{{t "project.proposal-info.product-info.hospital-name"}}</th>
							<th>{{t "project.proposal-info.product-info.hospital-representative"}}</th>
							<th>{{t "project.proposal-info.product-info.potential"}}</th>
							{{#each tableHead as |tcontent|}}
								<th>{{tcontent}}</th>
							{{/each}}
						</thead>
						<tbody>
							{{#each model.hospTableBody as |trContent|}}
								<tr>
									<td>
										{{trContent.destConfig.hospitalConfig.hospital.name}}
									</td>
									<td>
										{{trContent.resourceConfig.representativeConfig.representative.name}}
									</td>
									<td>{{t "project.proposal-info.product-info.money"}}{{format-number trContent.potential}}</td>
									{{#each trContent.tableTr as |tdContent|}}
										{{#if (type-number tdContent)}}
											<td>{{t "project.proposal-info.product-info.money"}}{{format-number tdContent 0}}</td>
										{{else}}
											<td>{{tdContent}}</td>
										{{/if}}
									{{/each}}
								</tr>
							{{/each}}
						</tbody>
					</table>
				{{/bp-layout}}
			</div>
		{{/if}}
	{{/bp-layout}}
{{/bp-layout}}