{{#bp-layout tagName="h3" main="between" cross="center" local-class="title" class="px-4" }}
	<span>
		<span local-class="icon" {{action "showContent"}} role="button">{{bp-icon icon=icon }}</span>
		{{#if (bp-eq product.productType 0)}}
			<span local-class="type self">{{t "card.product-card.company-product"}}</span>
		{{else}}
			<span local-class="type compete">{{t "card.product-card.major-competitors"}}</span>
		{{/if}}
		{{!-- {{goods.productConfig.product.name}} --}}
		{{product.name}}
		{{!-- - {{goods.productConfig.product.generalName}} --}}
	</span>
{{/bp-layout}}
{{#bs-collapse collapsed=showContent}}
	{{#bp-layout local-class="product-content"
		classNames="p-4" }}
		{{#bp-layout main="between" local-class="left" }}
			{{!-- {{#each goods.productConfig.product.images as |item|}} --}}
			<img src={{product.avatar}} alt={{product.name}} class="mr-4">
			{{!-- {{/each}} --}}
			{{#bp-layout direction="col" local-class="product-infos" }}
				{{#bp-layout tagName="p" }}
					<span>{{t "card.product-card.treatment-area"}}</span>
					{{!-- <span>{{goods.productConfig.treatmentArea}}</span> --}}
					<span>{{product.treatmentArea}}</span>
				{{/bp-layout}}
				{{#bp-layout tagName="p" }}
					<span>{{t "card.product-card.launch-time"}}</span>
					{{!-- <span>{{bp-string-slice goods.productConfig.launchTime 0 4}}年</span> --}}
					<span>{{bp-string-slice product.launchTime 0 4}}{{t "card.product-card.year"}}</span>
				{{/bp-layout}}
				{{#bp-layout tagName="p" }}
					<span>{{t "card.product-card.producer"}}</span>
					{{!-- <span>{{goods.productConfig.product.corpName}}</span> --}}
					<span>{{product.producer}}</span>
				{{/bp-layout}}
				{{#bp-layout tagName="p" }}
					<span>{{t "card.product-card.patent-describe"}}</span>
					{{!-- <span>{{goods.productConfig.patentDescribe}}</span> --}}
					<span>{{product.patentDescribe}}</span>
				{{/bp-layout}}
				{{#bp-layout tagName="p" }}
					<span>{{t "card.product-card.life-cycle"}}</span>
					{{!-- <span>{{goods.productConfig.lifeCycle}}</span> --}}
					<span>{{product.lifeCycle}}</span>
				{{/bp-layout}}
				{{#bp-layout tagName="p" classNames="m-0"}}
					<span>{{t "card.product-card.reference-price"}}</span>
					<span>{{product.priceType}}{{format-number product.price}}</span>
				{{/bp-layout}}
				{{!-- {{#bp-layout tagName="p" }}
					<span>药品特点</span>
					<span>{{goods.productConfig.productFeature}}</span>
				{{/bp-layout}} --}}
				{{!-- {{#bp-layout tagName="p" }}
					<span>治疗领域</span>
					<span>{{goods.productConfig.treatmentArea}}</span>
				{{/bp-layout}} --}}
				{{!-- {{#bp-layout tagName="p" local-class="target-department"}}
					<span>目标科室</span>
					<span>
						{{#each (string-to-array goods.productConfig.targetDepartment "#") as |item|}}
							<span>
								{{item}}
							</span>
						{{/each}}
					</span>
				{{/bp-layout}} --}}
			{{/bp-layout}}
		{{/bp-layout}}
		{{!-- {{#bp-layout direction="col" main="between" local-class="right" }}
			{{#bp-layout local-class="property prod-property" }}
				{{#bp-layout direction="col" main="between" local-class="square" }}
					<span>
						{{goods.productConfig.costEffective}}
					</span>
					<span>性价比</span>
				{{/bp-layout}}
				{{#bp-layout direction="col" main="between" local-class="square" }}
					<span>
						{{goods.productConfig.safety}}
					</span>
					<span>安全性</span>
				{{/bp-layout}}
				{{#bp-layout direction="col" main="between" local-class="square" }}
					<span>
						{{goods.productConfig.effectiveness}}
					</span>
					<span>有效性</span>
				{{/bp-layout}}
				{{#bp-layout direction="col" main="between" local-class="square" }}
					<span>
						{{goods.productConfig.convenience}}
					</span>
					<span>方便性</span>
				{{/bp-layout}}
			{{/bp-layout}}
			{{#bp-layout local-class="price prod-property" }}
				{{#bp-layout direction="col" main="between" local-class="square" }}
					<span>
						{{goods.productConfig.priceType}}
						{{format-number goods.productConfig.referencePrice}}
					</span>
					<span>公司考核价</span>
				{{/bp-layout}}
				{{#bp-layout direction="col" main="between" local-class="square" }}
					<span>
						{{goods.productConfig.priceType}}
						{{format-number goods.productConfig.costPrice}}
					</span>
					<span>单位成本价</span>
				{{/bp-layout}}
			{{/bp-layout}}
			{{#bp-layout local-class="manufacturer prod-property" }}
				{{#bp-layout direction="col" main="between" local-class="square" }}
					<span>
						{{goods.productConfig.product.medicareCategory}}
					</span>
					<span>医保类型</span>
				{{/bp-layout}}
				{{#bp-layout direction="col" main="between" local-class="square" }}
					<span>
						{{goods.productConfig.product.corpName}}
					</span>
					<span>生产厂商</span>
				{{/bp-layout}}
			{{/bp-layout}}
		{{/bp-layout}} --}}
		{{#bp-layout direction="col" local-class="right" }}
			<p local-class="keys" class="mb-2">{{t "card.product-card.product-feature"}}</p>
			<p local-class="values">
				{{!-- {{goods.productConfig.productFeature}} --}}
				{{product.feature}}
			</p>
		{{/bp-layout}}
	{{/bp-layout}}
{{/bs-collapse}}
